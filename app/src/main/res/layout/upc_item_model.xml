<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/imvPreUpcomingMovie"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:src="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txvPreUpcomingMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="movie title"
        app:layout_constraintEnd_toEndOf="@+id/imvPreUpcomingMovie"
        app:layout_constraintStart_toStartOf="@+id/imvPreUpcomingMovie"
        app:layout_constraintTop_toBottomOf="@+id/imvPreUpcomingMovie" />


</androidx.constraintlayout.widget.ConstraintLayout>